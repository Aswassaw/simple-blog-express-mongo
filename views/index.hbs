<h1>All Posts</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each posts}}
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <b>{{this.title}}</b>
                    </h5>
                    <p class="card-text">{{limitstring this.content 100}}</p>
                    <a class="btn btn-primary" href="/blog/{{this._id}}">Detail</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>